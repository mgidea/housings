<%= form_for(@housing) do |f| %>
  <% if @housing.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @housing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip_code, "Zip Code" %><br>
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>


  <div class="actions">

    <%= f.submit "Record" %>
  </div>
<% end %>
